datasource postgres {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  address            Json
  businessName       String?         @unique
  createdAt          DateTime        @default(now())
  customer           Customer[]
  email              String          @unique
  firstName          String?
  id                 String          @id @default(cuid())
  lastName           String?
  legalTermVersions  String
  messages           Json?
  password           String
  password2          String
  phoe               String
  privacyPolicy      Boolean
  roles              Json
  status             EnumUserStatus?
  termsAndConditions Boolean
  transactions       Transaction[]
  updatedAt          DateTime        @updatedAt
  username           String          @unique
}

model Transaction {
  amount          Int
  createdAt       DateTime                       @default(now())
  currency        String
  fee             Float?
  id              String                         @id @default(cuid())
  metadata        String?
  status          EnumTransactionStatus?
  transactionType EnumTransactionTransactionType
  updatedAt       DateTime                       @updatedAt
  user            User                           @relation(fields: [userId], references: [id])
  userId          String
}

model Account {
  accountNumber    String?
  accountType      EnumAccountAccountType?
  availableBalance Float?
  balance          Float?
  createdAt        DateTime                @default(now())
  currency         EnumAccountCurrency?
  customers        Customer                @relation(fields: [customersId], references: [id])
  customersId      String
  description      String?
  document         Document                @relation(fields: [documentId], references: [id])
  documentId       String
  id               String                  @id @default(cuid())
  name             String?
  status           EnumAccountStatus?
  updatedAt        DateTime                @updatedAt
}

model Document {
  accounts     Account[]
  createdAt    DateTime                 @default(now())
  customer     Customer?                @relation(fields: [customerId], references: [id])
  customerId   String?
  documentType EnumDocumentDocumentType
  expiringAt   DateTime?
  id           String                   @id @default(cuid())
  image        String
  status       EnumDocumentStatus?
  tags         String?
  updatedAt    DateTime                 @updatedAt
  url          String                   @unique
}

model Bank {
  createdAt       DateTime               @default(now())
  currency        String
  id              String                 @id @default(cuid())
  institutionName String                 @unique
  instutionType   EnumBankInstutionType?
  updatedAt       DateTime               @updatedAt
}

model Customer {
  Account   Account[]
  createdAt DateTime            @default(now())
  dob       DateTime?
  documents Document[]
  email     String?             @unique
  enitities User[]
  firstname String?
  id        String              @id @default(cuid())
  lastname  String?
  phone     String              @unique
  status    EnumCustomerStatus?
  updatedAt DateTime            @updatedAt
}

model Quote {
  account   Json
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  kyc       Json
  quoteInfo Json
  updatedAt DateTime @updatedAt
}

enum EnumUserStatus {
  Approved
  Pending
  Rejected
}

enum EnumTransactionStatus {
  Successful
  Pending
  Failed
}

enum EnumTransactionTransactionType {
  Credit
  Debit
}

enum EnumAccountAccountType {
  MobileMoney
  Iban
  Wallet
}

enum EnumAccountCurrency {
  Xof
  Eur
  Usd
  Celo
}

enum EnumAccountStatus {
  Approved
  Pending
  Blocked
}

enum EnumDocumentDocumentType {
  Driverlicence
  Passport
  GovernmentId
}

enum EnumDocumentStatus {
  Approved
  Rejected
}

enum EnumBankInstutionType {
  MobileMoney
  Bank
}

enum EnumCustomerStatus {
  Approved
  Failed
  Pending
}
